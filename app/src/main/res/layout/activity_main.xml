<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:id="@+id/bottomLayout_FrameLayout_MainActivity"
       android:background="@color/head_bottom_blue_color"
       android:layout_alignParentBottom="true"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_FrameLayout_MainActivity"
        android:layout_above="@id/bottomLayout_FrameLayout_MainActivity"/>
</RelativeLayout>
